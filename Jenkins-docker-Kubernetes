pipeline{
   agent any
   tools {
      maven '3.9.6'
   }
   //options{}
   //triggers{}
   stages{
      stage(1.clone){
         steps{
          sh  "echo cloning the latest application version"
          git 'https://github.com/Ibeawuchi411/Ibeawuchi411.git'            
         }
      }
      stage(2.mvnBuild){
         steps{
            sh 'mvn clean package'
         }
      }
      stage(3.codeQuality){
         steps{
            sh 'echo performing Code Quality Analysis'
            sh 'mvn sonar:sonar'   
            sh 'echo Code Quality Analysis passes'         
         }
      }
      stage(4.uploadArtifacts){
         steps{
            sh 'echo uploading artifacts into nexus'
            sh 'mvn deploy'   
            sh 'echo ci job completed successfully'  
            sh 'echo cd job will now run'           
         }
      }
   }
   //post{}
}

jenkins pipeline script for our cp/ccm/ci/cd job:
pipeline{
   agent any  
   tools{}
   stages{
      stage('1.containerisation'){
         steps{
            sh "docker build -t mylandmarktech/hello -f /var/lib/jenkins/hello/df.txt "
         }
      }
      stage('2.shareImages'){
         steps{
            sh 'docker login -u mylandmarktech -p admin@123'
            sh 'docker push mylandmarktech/hello '
         }
      }
      stage('3.Deploy2UAT'){
         steps{
            sh 'kubectl apply -f uat-app.yml '
         }
      }
      //stage('4.ManualApproval'){}
      stage('5.Deploy2prod'){
         steps{
            sh 'kubectl apply -f prod-app.yml '
         }
      }         
      }
   }
   post{
      always{}
      success{}
      failure{}
   }
}
